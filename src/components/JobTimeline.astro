---
import JobCard from './JobCard.astro';
interface Job {
    date: string;
    title: string;
    description: string;
}
const Jobs: Job [] = [
    {
        date: "2025-presente",
        title: "Autenticación y autorización de Usuario ",
        description:
            "Desarrollé un backend seguro con Spring Boot y JWT para gestionar usuarios, roles y accesos protegidos. Implementé control de endpoints, validación de tokens y manejo de excepciones.",
    },
    {
        date: "2024-2025",
        title: "Gestión de Usuarios",
        description:
            "Aplicación web con CRUD de usuarios (crear, listar, editar, eliminar) con validaciones, vistas en Thymeleaf y conexión a base de datos MySQL usando Spring Boot",
    },
];
---

<ol class="relative border-s border-gray-200 ">
    {Jobs.map((job) => <JobCard job={job} />)}
</ol>